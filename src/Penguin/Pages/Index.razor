@page "/"

<AuthorizeView>
    <Authorized>
        <p href="Identity/Account/Manage">Hello, @context.User.Identity.Name!</p>

        <div class="card">
            <div class="container">
                <h4><b>Please copy this code into the Post transaction section in your account</b></h4>
                <pre>
                    console.log(transaction)
                    try {
                    let response = await fetch('https://investerquin.azurewebsites.net/api/PostTransactions?id=58525f75-a070-4e01-9769-1184aef55b22', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json'},
                    body: JSON.stringify({transaction})
                    });

                    const result = await response.json();
                    console.log(result);
                    } catch(error) {
                    console.log(error)
                    }
                </pre>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <h1>Please login</h1>
    </NotAuthorized>
</AuthorizeView>

